{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES5",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["node/modules/*"]
    }
  },
  "include": ["src/**/*"]
}